##
##  Makefile -- Build procedure for sample axis2services Apache module
##  Autogenerated via ``apxs -n axis2services -g''.
##


builddir=.
top_srcdir=/usr/local/apache2
top_builddir=/usr/local/apache2
include /usr/local/apache2/build/special.mk

#   the used tools
APXS=apxs
APACHECTL=/www/bin/apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#export DEFS=-D_DEBUG
#export CFLAGS=-D_DEBUG

.PHONY: restart

rebuild: make install restart

make:
	/usr/local/apache2/bin/apxs -c mod_axis2services.c

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_axis2services.o mod_axis2services.lo mod_axis2services.slo mod_axis2services.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/axis2/services

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start

restart:
	$(APACHECTL) stop
	$(APACHECTL) start

stop:
	$(APACHECTL) stop

