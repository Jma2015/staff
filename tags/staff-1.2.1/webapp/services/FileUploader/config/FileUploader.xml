<?xml version="1.0" encoding="utf-8" ?>
<FileUploader>
  <Unpackers>

    <Unpacker>
      <FileExt>.tar.gz</FileExt>
      <Cmd>tar zxf $(SRC_FILE) -C $(DST_DIR)</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.tgz</FileExt>
      <Cmd>tar zxf $(SRC_FILE) -C $(DST_DIR)</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.tbz</FileExt>
      <Cmd>tar jxf $(SRC_FILE) -C $(DST_DIR)</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.tar.bz2</FileExt>
      <Cmd>tar jxf $(SRC_FILE) -C $(DST_DIR)</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.zip</FileExt>
      <Cmd>unzip -o $(SRC_FILE) -d $(DST_DIR)</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.7z</FileExt>
      <Cmd>7zr x $(SRC_FILE) -o$(DST_DIR) -y</Cmd>
    </Unpacker>

    <Unpacker>
      <FileExt>.rar</FileExt>
      <Cmd>unrar x $(SRC_FILE) $(DST_DIR) -y</Cmd>
    </Unpacker>

  </Unpackers>
</FileUploader>
